MDScreen:
    name: 'facture'
    MDFloatLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDIconButton:
            icon: 'arrow-left'
            pos_hint:{"center_x":.02, "center_y":.97}
            on_release:
                app.fermer_ecran()
                app.dismiss_home()

        MDLabel:
            id: titre
            text: ''
            font_size: 16
            font_name: 'poppins'
            pos_hint:{"center_x":.6, "center_y":.97}

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: False
            opacity: 0

        MDLabel:
            id: non_payé
            text: ''
            font_size: 16
            halign: 'center'
            font_name: 'poppins-bold'
            pos_hint:{"center_x":.3, "center_y":.08}

        MDLabel:
            id: payé
            text: ''
            font_size: 16
            font_name: 'poppins-bold'
            halign: 'center'
            pos_hint:{"center_x":.7, "center_y":.08}

        MDFloatLayout:
            id: tableau_facture
            pos_hint:{'center_x': .5,'center_y': .45}
            size_hint: 1,.85
            radius: 8
