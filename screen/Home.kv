MDScreen:
    name: 'Home'
    MDFloatLayout:
        orientation:'vertical'
        size_hint: 1,1
        pos_hint:{"center_x":.77,"center_y":.5}

        MDLabel:
            text: 'BIENVENUE DANS PLANIFICATOR'
            font_size: 25
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .95}

        MDLabel:
            text: 'Gestion des contrats et clients - gestion de planning et traitements'
            font_size: 16
            font_name: 'poppins'
            pos_hint:{'center_x':.5, 'center_y': .9}

        MDLabel:
            text: 'Liste des contrats r√©cents'
            font_size: 20
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .7}


        MDFloatLayout:
            id: tri_container
            orientation: 'horizontal'
            md_bg_color: '#56B5FB'
            size_hint: .2, .06
            radius: [8]
            padding: 8
            pos_hint:{'center_x':.6, 'center_y': .7}

            MDLabel:
                id: type_contrat
                text : 'Contrats'
                font_size: 16
                font_name: 'poppins'
                pos_hint:{'center_x':.55, 'center_y': .5}

            MDIconButton:
                icon: 'chevron-down'
                icon_size:20
                pos_hint:{'center_x':.9, 'center_y': .5}
                on_release:
                    app.dropdown_homepage(self, 'home')

        ScrollView:
            do_scroll_x: True
            do_scroll_y: False
            pos_hint:{"center_x": .38, "center_y": .15}
            size_hint: .8, 1

            MDBoxLayout:
                id: contrats
                orientation: "horizontal"
                size_hint_x: None
                width: self.minimum_width
                spacing: "25dp"
                padding: ('30dp', '5dp', '0dp', '0dp')