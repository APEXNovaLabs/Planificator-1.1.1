MDScreen:
    name: 'all_treatment'

    MDFloatLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDIconButton:
            icon: 'arrow-left'
            pos_hint:{"center_x":.02, "center_y":.97}
            on_release:
                app.fermer_ecran()
                app.dismiss_popup()

        MDLabel:
            id: titre
            text: ''
            font_size: 16
            font_name: 'poppins'
            pos_hint:{"center_x":.6, "center_y":.97}

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .45}
            active: True

        MDFloatLayout:
            id: tableau_treat
            pos_hint:{'center_x': .5,'center_y': .45}
            size_hint: 1,.85
            radius: 8
