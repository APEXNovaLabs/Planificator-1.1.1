MDScreen:
    name: 'ajout_remarque'

    MDFloatLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}

        MDIconButton:
            icon: 'arrow-left'
            pos_hint:{"center_x":.02, "center_y":.97}
            on_release:
                app.dismiss_popup()
                app.fermer_ecran()

        MDLabel:
            id: titre
            text: 'Dératisation pour DevCorps pour le mois de mars'
            font_size: 18
            font_name: 'poppins'
            pos_hint:{"center_x":.6, "center_y":.97}

        MDLabel:
            id: date
            text: ''
            font_name: 'poppins'
            font_size: 16
            pos_hint:{"center_x":.55, "center_y":.85}

        MDLabel:
            id: duree
            text: 'Durée totale du traitement: 12 mois'
            font_name: 'poppins'
            font_size: 16
            pos_hint:{"center_x":.55, "center_y":.7}

        MDTextButton:
            text: 'Payé'
            font_name: 'poppins'
            font_size: 16
            pos_hint:{"center_x":.56, "center_y":.7}
            on_release:
                paye_facture.active = True if paye_facture.active is False else False
                app.on_check_press(paye_facture.active)


        MDCheckbox:
            id: paye_facture
            pos_hint: {"center_x": .51,'center_y':.7}
            size_hint: .07, .07
            checkbox_icon_down: 'check'
            on_active:
                app.on_check_press(paye_facture.active)

        MDTextButton:
            id: label_cheque
            text: 'Chèque'
            font_name: 'poppins'
            font_size: 16
            pos_hint:{"center_x":.71, "center_y":.7}
            opacity: 0
            disbaled : True
            on_release:
                cheque.active = True if cheque.active is False else False

        MDCheckbox:
            id: cheque
            pos_hint: {"center_x": .65,'center_y':.7}
            size_hint: .07, .07
            checkbox_icon_down: 'check'
            group: 'payement'
            opacity: 0
            active: True

        MDTextButton:
            id: label_espece
            text: 'Espèce'
            font_name: 'poppins'
            font_size: 16
            pos_hint:{"center_x":.83, "center_y":.7}
            opacity: 0
            disbaled : True
            on_release:
                espece.active = True if espece.active is False else False

        MDCheckbox:
            id: espece
            pos_hint: {"center_x": .77,'center_y':.7}
            size_hint: .07, .07
            checkbox_icon_down: 'check'
            group: 'payement'
            opacity: 0

        MDLabel:
            id: mois_trait
            text: ' '
            font_name: 'poppins'
            font_size: 16
            pos_hint:{"center_x":1, "center_y":.85}

        MDTextField:
            id: remarque
            text_color_normal: 'black'
            mode: 'fill'
            hint_text: 'Votre remarque'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.5,"center_y":.55}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .9,None
            radius:[5]

        MDTextField:
            id: probleme
            text_color_normal: 'black'
            mode: 'fill'
            hint_text: 'Problème'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.25,"center_y":.35}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .4,None
            radius:[5]

        MDTextField:
            id: action
            text_color_normal: 'black'
            mode: 'fill'
            hint_text: 'Action entreprise'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.75,"center_y":.35}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .4,None
            radius:[5]

        MDRectangleFlatButton
            text: 'Annuler'
            font_name: 'poppins'
            text_color: 'black'
            md_bg_color: '#FF3333'
            line_color: '#FF3333'
            size_hint: .25, None
            pos_hint: {'center_x': .3, 'center_y': .1}
            on_release:
                app.fermer_ecran()
                app.dismiss_popup()

        MDRectangleFlatButton
            text: 'Enregistrer'
            font_name: 'poppins'
            text_color: 'black'
            md_bg_color: 'white'
            line_color: 'white'
            size_hint: .25, None
            pos_hint: {'center_x': .7, 'center_y': .1}
            on_release:
                app.create_remarque()