MDScreen:
    name: 'planning'
    MDFloatLayout:
        orientation:'vertical'
        size_hint: 1,1
        pos_hint:{"center_x":.77,"center_y":.5}

        MDLabel:
            text: 'Planning des traitements'
            font_size: 25
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .95}

        MDLabel:
            text: 'La liste des clients'
            font_size: 20
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .81}

        MDBoxLayout:
            id: render_excel
            orientation: 'horizontal'
            md_bg_color: '#56B5FB'
            size_hint: .22, .055
            radius: [8]
            padding: 8
            pos_hint:{'center_x':.35, 'center_y': .81}

            MDTextButton:
                text : ' Obtenir un rendu excel'
                font_size: 15
                padding:0,0,60,0
                font_name: 'poppins'
                on_release:
                    app.fenetre_planning('', 'rendu_planning')

            MDIconButton:
                icon: 'Assets/render.png'
                icon_size:20
                pos_hint:{'center_x':.9, 'center_y': .5}
                on_release:
                    app.fenetre_planning('', 'rendu_planning')

        MDBoxLayout:
            id: search_client
            orientation: 'horizontal'
            md_bg_color: '#B3F844'
            size_hint: .22, .055
            radius: [8]
            padding: 8
            pos_hint:{'center_x':.6, 'center_y': .81}

            MDTextField:
                font_size: 15
                line_color_normal : '#B3F844'
                line_color_normal: 'black'
                text_color_focus: 'black'
                font_name: 'poppins'
                pos_hint:{'center_x':.9, 'center_y': .5}
                on_text:
                    app.search(self.text, True)

            MDIconButton:
                icon: 'Assets/search.png'
                icon_size:20
                pos_hint:{'center_x':.9, 'center_y': .5}

        MDSpinner:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .35, 'center_y': .45}
            active: False

        MDFloatLayout:
            id: tableau_planning
            pos_hint:{'center_x': .355,'center_y': .4}
            size_hint: .71,.75
            radius: 8