MDScreen:
    name: 'planning'
    MDFloatLayout:
        orientation:'vertical'
        size_hint: 1,1
        pos_hint:{"center_x":.77,"center_y":.5}

        MDLabel:
            text: 'Planning des traitements'
            font_size: 25
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .95}

        MDLabel:
            text: 'La liste des clients'
            font_size: 20
            font_name: 'poppins-bold'
            pos_hint:{'center_x':.5, 'center_y': .81}

        MDBoxLayout:
            id: render_excel
            orientation: 'horizontal'
            md_bg_color: '#56B5FB'
            size_hint: .22, .055
            radius: [8]
            padding: 8
            pos_hint:{'center_x':.35, 'center_y': .81}

            MDTextButton:
                text : ' Obtenir un rendu excel'
                font_size: 15
                padding:0,0,60,0
                font_name: 'poppins'
                on_release:
                    app.fenetre_planning('', 'rendu_planning')

            MDIconButton:
                icon: 'Assets/render.png'
                icon_size:20
                pos_hint:{'center_x':.9, 'center_y': .5}
                on_release:
                    app.fenetre_planning('', 'rendu_planning')

        MDBoxLayout:
            id: actualiser
            orientation: 'horizontal'
            md_bg_color: '#B3F844'
            size_hint: .22, .055
            radius: [8]
            padding: 8
            pos_hint:{'center_x':.6, 'center_y': .89}

            MDTextButton:
                text : ' Actualiser'
                padding: 0,0,155,0
                font_size: 15
                font_name: 'poppins'

            MDIconButton:
                icon: 'Assets/refresh.png'
                icon_size:20
                pos_hint:{'center_x':.9, 'center_y': .5}

        MDBoxLayout:
            id: search_client
            orientation: 'horizontal'
            md_bg_color: '#B3F844'
            size_hint: .22, .055
            radius: [8]
            padding: 8
            pos_hint:{'center_x':.6, 'center_y': .81}

            MDTextButton:
                text : ' Rechercher un client'
                font_size: 15
                font_name: 'poppins'
                padding:0,0,76,0

            MDIconButton:
                icon: 'Assets/search.png'
                icon_size:20
                pos_hint:{'center_x':.9, 'center_y': .5}

        MDFloatLayout:
            id: tableau_planning
            pos_hint:{'center_x': .355,'center_y': .4}
            size_hint: .71,.75
            radius: 8