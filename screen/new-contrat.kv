MDScreen:
    name: 'new_contrat'
    size_hint: None, None
    height: '370dp'
    width: '1000dp'
    pos_hint: {'center_x':.5, 'center_y': .5}
    MDFloatLayout:
        pos_hint: {'center_x':.5, 'center_y': .5}

        MDLabel:
            text: 'Date du contrat'
            font_name: "poppins"
            font_size: 15
            pos_hint: {"center_x": .55,'center_y':.92}

        MDTextField:
            id: date_new_contrat
            text_color_normal: 'black'
            mode: 'fill'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.17,"center_y":.8}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .25,None
            radius:[10]

        MDIconButton:
            icon: 'Assets/calendar.png'
            pos_hint:{"center_x": .27, "center_y":.8}
            on_release:
                app.calendrier('new_contrat', 'date_new_contrat')

        MDLabel:
            text: 'Début du contrat'
            font_name: "poppins"
            font_size: 15
            pos_hint: {"center_x": .88,'center_y':.92}

        MDTextField:
            id: debut_new_contrat
            text_color_normal: 'black'
            mode: 'fill'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.5,"center_y":.8}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .25,None
            radius:[10]

        MDIconButton:
            icon: 'Assets/calendar.png'
            pos_hint:{"center_x": .6, "center_y":.8}
            on_release:
                app.calendrier('new_contrat', 'debut_new_contrat')

        MDLabel:
            text: 'Fin du contrat'
            font_name: "poppins"
            font_size: 15
            pos_hint: {"center_x": 1.21,'center_y':.92}

        MDTextField:
            id: fin_new_contrat
            text_color_normal: 'black'
            mode: 'fill'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.83,"center_y":.8}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .25,None
            radius:[10]

        MDIconButton:
            icon: 'Assets/calendar.png'
            pos_hint:{"center_x": .93, "center_y":.8}
            on_release:
                app.calendrier('new_contrat', 'fin_new_contrat')

        MDLabel:
            text: 'Type de traitement'
            font_name: "poppins"
            font_size: 15
            pos_hint: {"center_x": .55,'center_y':.62}

        MDTextField:
            id: type_traitement
            text: 'Dératisation'
            text_color_normal: 'black'
            mode: 'fill'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.17,"center_y":.5}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .25,None
            radius:[10]

        MDIconButton:
            icon: 'chevron-down'
            pos_hint:{"center_x": .27, "center_y":.5}
            on_release:
                app.dropdown_new_contrat(self, 'type_traitement')

        MDLabel:
            text: 'Durée du contrat'
            font_name: "poppins"
            font_size: 15
            pos_hint: {"center_x": .88,'center_y':.62}

        MDTextField:
            id: duree_new_contrat
            text: '12 mois'
            text_color_normal: 'black'
            mode: 'fill'
            text_color_focus: 'black'
            font_name:"poppins"
            pos_hint:{"center_x":.5,"center_y":.5}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .25,None
            radius:[10]

        MDIconButton:
            icon: 'chevron-down'
            pos_hint:{"center_x": .6, "center_y":.5}
            on_release:
                app.dropdown_new_contrat(self, 'duree_new_contrat')

        MDLabel:
            text: 'Catégorie du contrat'
            font_name: "poppins"
            font_size: 15
            pos_hint: {"center_x": 1.21,'center_y':.62}

        MDTextField:
            id: cat_contrat
            text: 'Nouveau contrat'
            mode: 'fill'
            font_name:"poppins"
            pos_hint:{"center_x":.83,"center_y":.5}
            line_color_focus: '#56B5FB'
            fill_color_normal: 'white'
            line_color_normal: 'white'
            size_hint: .25,None
            radius:[10]
            disabled :True

        MDIconButton:
            icon: 'chevron-down'
            pos_hint:{"center_x": .93, "center_y":.5}
            on_release:
                app.dropdown_new_contrat(self, 'cat_contrat')

        MDRectangleFlatButton:
            text: 'Continuer'
            text_color: 'black'
            font_name: 'poppins'
            font_size: 15
            size_hint: .3, None
            pos_hint: {'center_x':.7, 'center_y': .2}
            md_bg_color: '#B3F844'
            line_color: '#B3F844'

        MDRectangleFlatButton:
            text: 'Annuler'
            text_color: 'black'
            font_name: 'poppins'
            font_size: 15
            size_hint: .3, None
            pos_hint: {'center_x':.3, 'center_y': .2}
            md_bg_color: '#FF3333'
            line_color: '#FF3333'
            on_release:
                app.fermer_ecran()